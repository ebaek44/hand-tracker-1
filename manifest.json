{
    "manifest_version": 3,
    "name": "Video Gesture Control",
    "version": "1.0",
    "description": "Control video playback on websites using hand gestures.",
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "background": {
      "service_worker": "js/background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icons/icon.png"
    },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "content_scripts": [
      {
        "matches": ["*://*.youtube.com/*", "*://*.netflix.com/*"],
        "js": ["js/content.js"]
      }
    ]
  }
  