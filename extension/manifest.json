{
  "manifest_version": 3,
  "name": "Hands-On Video Controls",
  "version": "1.0.0",
  "description": "Control any site's videos with hand gestures from a local helper.",
  "icons": { "128": "icons/128.png" },
  "permissions": ["storage"],
  "host_permissions": ["http://localhost:3000/*"],
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["socket.io.min.js", "content.js"],
    "run_at": "document_idle",
    "all_frames": true
  }],
  "options_page": "options.html"
}
  